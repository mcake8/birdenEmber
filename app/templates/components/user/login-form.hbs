<div class="module-login-form">
	<div>
		<img src="../img/logo.png">
	</div>
	<div class="form-title">ФОРМА ВХОДА</div>
	<div class="line"></div>
	<div class="wrap">
		<div class="num-1">90
			<div>аниме в базе</div>
		</div>
		<div class="num-3">200
			<div>аниме-серий</div>
		</div>
		<div class="num-2">120
			<div>пользователей</div>
		</div>
	</div>
	<form class="form"{{action 'authenticate' on='submit'}}>
		<label for="identification">
			{{input id='identification' placeholder="Логин" value=identification}}
		</label>
		<label for="password">
			{{input id='password' placeholder="Пароль" value=password}}
		</label>
		<button type="submit" disabled={{isDisabled}}>Войти</button>
		{{#if errorMessage}}
			<div class="not-now">Пароли и логин не совпадают</div>
		{{/if}}
		{{#link-to 'registration'}}<button class="reg_bt">Зарегистрироваться</button>{{/link-to}}
	</form>
</div>
