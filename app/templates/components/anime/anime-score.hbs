<div class="rating-vol" onmouseup={{action 'sendScore'}}>
	<div class="percentage-background"></div>
	{{#if anime.user_score}}
		<div class="rating-title">Ваша оценка: <span class="rate">{{anime.user_score}}</span></div>
		<div class="rating-nums">{{anime.average_score}} из 10</div>
		{{else}}
		<div class="rating-title"><span class="rate_name">Средний балл:</span> <span class="rate"></span></div>
		<div class="rating-nums">{{anime.average_score}} из 10</div>
	{{/if}}
</div>