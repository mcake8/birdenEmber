<div class="right-preview">
{{#each anime.series as |item|}}
	<div 
		class="preview-element" 
		onclick={{action 'selectSeries' item.cover}} 
		data={{item.video.url}} 
		style={{html-safe (concat "background-image: url(../" item.thumb ");")}}
	>
		{{item.number}}
	</div>
{{/each}}
</div>
<div class="video-player" >
	<div class="player">
		<video src={{anime.series.firstObject.video.url}} id="video"></video>
		<div class="controls_row">
			<div class="select_zone">
				<div class="progress_wrap" >
					<div class="line"></div>
					<div class="round" id="round" ></div>
				</div>
			</div>
			<div class="play" id="play">
				<img src="/img/play.svg">
				<img src="/img/pause.svg">
			</div>
			<div class="volume full">
				<span>
					<img src="/img/1.svg">
					<img src="/img/2.svg">
					<img src="/img/3.svg">
				</span>
				<div class="pannel_wrap">
					<div class="pannel">
						<div class="vl_bar">
							<div class="vl_circle"></div>
							<div class="vl_progress"></div>
							{{input 
								type="range" 
								value=80
								min="0" 
								max="100" 
								id='volume'
							}}
						</div>
						<img src="/img/4.svg" class="mute">
					</div>
				</div>
			</div>
			<div class="timer">
				<span id="curentTime">00:00</span>
				<span id="duration">00:00</span>
			</div>
		</div>
	</div>
</div>