<div class="right-preview">
{{#each anime.series as |item|}}
	<div 
		class="preview-element" 
		data={{item.video.url}}
		coverImg= {{item.cover}}
		name={{item.name}}
		duration={{item.duration}}
		style={{html-safe (concat "background-image: url(../" item.thumb ");")}}
	>
		{{item.number}}
		<span class="duration"></span>
	</div>
{{/each}}
</div>
<div class="video-player">
	<div class="player load_player">
		<video src={{anime.series.firstObject.video.url}} id="video"></video>
		<div class="anime_name">
			<span class="title">{{anime.title}}</span>
			<span class="s_num">1 Серия</span>
		</div>
		<div class="next_wrap">
			<div class="nextTimer">
				<div class="nextTimer_text">
					<span id="nextName">Следующая серия начнется через</span>
					<div>
						<span id="remain">10</span> секунд
					</div>
					<span id="nextPlay" class="contr_bt">продолжить</span>
					<span id="cancel" class="contr_bt">Отмена</span>
				</div>
				<div class="last_title">Рекомендуем посмотреть:</div>
				<div class="recommended">
					{{#each recommendedAnim as |item|}}
						{{#link-to 'main.anime.page' item.id class="recommended_anime"}}
							<div class="img_wrap" title="{{item.title}}">
								<img src="{{item.cover.url}}">
							</div>
							<span class="rec_title">{{item.title}}</span>
						{{/link-to}}
					{{/each}}
				</div>
				
			</div>
		</div>
		<div class="continue_watch">
			<div class="continue_watch_text">
				<div class="continue_watch_text_titile">Продолжить просмотр?</div>
				<div>
					<span id="yes">Да</span>
					<span id="no">Нет</span>
				</div>
			</div>
		</div>
		<div class="bigplay" id="firstPlay"></div>
		<div class="controls_wrap">
			<div class="controls_row">
				<div class="select_zone">
					<div class="progress_wrap">
						<div class="show_preview">
							<div class="piece"></div>
							<video src={{anime.series.firstObject.video.url}} id="preview_video"></video>
						</div>
						<div class="line"></div>
						<div class="round" id="round" ></div>
					</div>
				</div>
				<div class="play" id="play">
					<img src="/img/play.svg">
					<img src="/img/pause.svg">
				</div>
				<div class="volume full">
					<span>
						<img src="/img/1.svg">
						<img src="/img/2.svg">
						<img src="/img/3.svg">
					</span>
					<div class="pannel_wrap">
						<div class="pannel">
							<div class="vl_bar">
								<div class="vl_circle"></div>
								<div class="vl_progress"></div>
								{{input 
									type="range" 
									value=80
									min="0" 
									max="100" 
									id='volume'
								}}
							</div>
							<img src="/img/4.svg" class="mute">
						</div>
					</div>
				</div>
				<div class="timer">
					<span id="curentTime">00:00</span>
					<span id="duration">00:00</span>
				</div>
				<div class="prev_bt"></div>
				<div class="full_screen_bt" id="fs_bt"></div>
				<div class="next_bt"></div>
			</div>
		</div>
	</div>
</div>
{{disabledView}}
